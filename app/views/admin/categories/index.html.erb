<% content_for :title, t('categories.index.title') %>
<% content_for :breadcrumb, t('categories.index.breadcrumb') %>

<div class="twelvecol">
  <div class="page-header">
    <%= link_to new_admin_category_path, class: "btn btn-blue btn-large", "data-placement" => "bottom", "data-toggle" => "tooltip", title: t('categories.index.add_tooltip') do %>
      <i class="icon-plus"></i>
    <% end %>
    <h2 class="widget widget-header"><%= t('categories.index.header') %></h2>
  </div>
  <% if @categories.empty? %>
    <div class="widget widget-content">
      <div class="helper-notification">
        <p><%= t('categories.index.no_records') %></p>
        <i class="icon-lab"></i>
      </div>
    </div>
  <% else %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th><%= t('categories.index.name') %></th>
            <th><%= t('categories.index.description') %></th>
            <th><%= t('categories.index.sorting') %></th>
            <th><%= t('categories.index.active') %></th>
            <th><%= t('categories.index.no_of_products') %></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td>
                <%= category.name %>
              </td>
              <td>
                <%= category.description %>
              </td>
              <td>
                <%= category.sorting %>
              </td>
              <td>
                <%= category.active ? "<i class='icon-checkmark icon-green'></i>".html_safe : "<i class='icon-close icon-red'></i>".html_safe %>
              </td>
              <td>
                <%= category.products.count %>
              </td>
              <%= table_actions [:admin, category], "edit", "delete" %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
