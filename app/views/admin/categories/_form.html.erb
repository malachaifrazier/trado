<div class="threecol">
  <h3><%= t('categories.form.category_details.header') %></h3>
  <p><%= t('categories.form.category_details.description') %></p>
</div>
<div class="ninecol last">
  <fieldset class="widget widget-content">
    <div class="form-group">
      <%= f.label t('categories.form.category_details.name_label') %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label t('categories.form.category_details.description_label') %>
      <%= f.text_area :description, class: 'form-control', rows: 8 %>
    </div>
    <div class="form-group">
      <%= f.label t('categories.form.category_details.sorting_label') %>
      <%= f.text_field :sorting, class: 'form-control' %>
    </div>
  </fieldset>
</div>
<div class="threecol">
  <h3><%= t('categories.form.search_engine.header') %></h3>
  <p><%= t('categories.form.search_engine.description') %></p>
</div>
<div class="ninecol last">
  <fieldset class="widget widget-content">
    <div class="form-group">
      <%= f.label t('categories.form.search_engine.page_title_label') %>
      <%= f.text_field :page_title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label t('categories.form.search_engine.meta_description_label') %>
      <%= f.text_field :meta_description, class: 'form-control' %>
    </div>
  </fieldset>
</div>
<div class="threecol">
  <h3><%= t('categories.form.visibility.header') %></h3>
  <p><%= t('categories.form.visibility.description') %></p>
</div>
<div class="ninecol last">
  <fieldset class="widget widget-content widget-last">
    <div class="radio">
      <label>
        <%= f.radio_button :active, true %>
        <%= t('categories.form.visibility.visible_label') %>
      </label>
    </div>
    <div class="radio">
      <label>
        <%= f.radio_button :active, false %>
        <%= t('categories.form.visibility.hidden_label') %>
      </label>
    </div>
  </fieldset>
  <div class="form-action">
    <%= f.submit t('categories.form.submit_button'), class: 'btn btn-blue btn-large' %>
  </div>
</div>
